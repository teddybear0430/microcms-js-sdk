{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/**/*.(spec|test).(ts|tsx|js)", "test/**/*.(spec|test).(ts|tsx|js)"]
}
